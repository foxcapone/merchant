<div class="container-fluid">
  <div class="row">
    <div class="col-sm-4">

      <h1>Order</h1>
      <p><strong>Name: </strong>
      <%= @order.name %>
      </p>

      <p>
        <strong>Address: </strong>
        <%= @order.address %>
      </p>

      <p>
        <strong>Pay Type: </strong>
        <%= @order.pay_type %>
      </p>

      <p>
        <strong>Date: </strong>
        <%= @order.created_at.stamp('Feb 21, 2002') %>
      </p>

      <table class='table table-striped table-hover'>
        <thead>
          <tr>
            <th>Image Header</th>
            <th>Product</th>
            <th>Quantity</th>
            <th>Unit Price</th>
            <th>Total Price</th>
          </tr>
      </thead>
       <tbody>
          <% @order.line_items.each do |item| %>
            <tr>
              <td><%= image_tag item.product.avatar.url(:thumb) %></td>
              <td><%= item.product.name %></td>
              <td><%= item.quantity %></td>
              <td><%= number_to_currency(item.price) %></td>
              <td><%= number_to_currency(item.total_price) %></td>
            </tr>
            <% end %>
       </tbody>
      </table>
    </div>
  </div>
</div>