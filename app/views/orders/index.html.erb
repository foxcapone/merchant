<div class="container-fluid">
  <div class='row'>
    <div class='col-sm-12'>
        <p id="notice"><%= notice %></p>

        <h1>Orders</h1>

        <table class='table table-striped table-hover'>
          <thead>
            <tr>
              <th>Date</th>
              <th>Name</th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @orders.each do |order| %>
              <tr>
                <td><%= order.created_at.stamp('Feb 24, 2002') %></td>
                <td><%= order.name %></td>
                <td><%= link_to 'Show', order_path(order) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <br>
    </div>
  </div>
</div>

