<%= simple_form_for(@order) do |f| %>
<!-- Show Any Errors -->
  <%= f.error_notification %>
<!-- Form Fields -->
  <div class="form-inputs">
    <%= f.input :name, placeholder: 'Goose Bag' %>
    <%= f.input :address, placeholder: "666 Goose ln.\nNew Orleans, LA" %>
    <%= f.input :pay_type, collection: Order::PAYMENT_TYPES, prompt: 'Select a payment method' %>
  </div>
<!-- Submit Form -->
  <div class="form-actions">
    <%= f.submit 'Place Order', class: "btn btn-success" %>
  </div>

<% end %>