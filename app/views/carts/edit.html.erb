<div class='container-fluid'>
  <div class='row'>
    <div class='col-xs-12'>
      <h2>Your Shopping Cart</h2>

      <table class='table table-striped table-hover'>
        <thead>
          <tr>
            <th>Image Header</th>
            <th>Product</th>
            <th>Quantity</th>
            <th>Unit Price</th>
            <th>Total Price</th>
          </tr>
      </thead>
       <tbody>
          <% @cart.line_items.each do |item| %>
            <tr>
              <td><%= image_tag item.product.avatar.url(:thumb) %></td>
              <td><%= item.product.name %></td>
              <td><%= item.quantity %></td>
              <td><%= number_to_currency(item.price) %></td>
              <td><%= number_to_currency(item.total_price) %></td>
            </tr>
            <% end %>
       </tbody>
      </table>

      <h3>Order Subtotal: <%= number_to_currency(@cart.subtotal) %></h3>
      <br>
      <%= link_to "Checkout", new_order_path, class: "btn btn-xl btn-info" %>
      <br>
      <br>
      <%= link_to "Continue Shopping", shop_path, class: "btn btn-sm btn-success" %>
      <%= link_to "Empty Cart", @cart, method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-sm btn-danger" %>
    </div>
  </div>
</div>

